<h1>Add a recipe</h1>

<%= form_for @recipe, :url => user_recipes_path, :html => { :multipart => true } do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <%= f.label :instructions %>
  <%= f.text_area :instructions %>
  <%= f.file_field :photo %>
  <%= f.submit %>
<% end %>
